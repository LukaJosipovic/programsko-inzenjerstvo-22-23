@model PIProjekt.Models.Employee

@{
    ViewData["Title"] = "Work";
}


<h1>Work</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    <label class="form-label">Marka</label>
                    <input class="form-control" name="marka">
                </div>
                <div class="mb-3">
                    <label class="form-label">Tip vozila</label>
                    <select class="form-control" asp-items="new SelectList(ViewBag.VehicleTypeList)"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Tip goriva</label>
                    <select class="form-control" asp-items="new SelectList(ViewBag.FuelTypeList)"></select>
                </div>
                <button type="submit" class="btn btn-primary">New Vehicle</button>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to login</a>
</div>
